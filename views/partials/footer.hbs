      </div>
      <!-- /.col-lg-4 -->
      <div class="col-lg-4 ps-lg-5">
        <div class="widget">
          <h3 class="mb-4">Company</h3>
          <ul class="list-unstyled float-start links">
            <li><a href="#">About us</a></li>
            <li><a href="#">Services</a></li>
            <li><a href="#">Vision</a></li>
          </ul>
        </div>
        <!-- /.widget -->
      </div>
      <!-- /.col-lg-4 -->
      <div class="col-lg-4">
        <div class="widget">
          <h3 class="mb-4">Most popular</h3>
          <div class="post-entry-footer">
            <ul>
              {{#each popularRecipes}}
                <li>
                  <a href="/recipes/{{this._id}}">
                    <img
                      src={{this.image}}
                      alt="Image placeholder"
                      class="me-4 rounded"
                    />
                    <div class="text">
                      <h4>{{this.title}}</h4>
                      <div class="post-meta">
                        <span class="mr-2">{{this.mealType}} </span>
                      </div>
                    </div>
                  </a>
                </li>
              {{/each}}
            </ul>
          </div>

        </div>
