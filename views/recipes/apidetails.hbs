<body>
  <div class="d-flex justify-content-center">
    <div class="card m-5 col col-lg-9 col-xl-7">
      <div
        class="site-cover site-cover-sm same-height overlay single-page"
        style="background-image: url({{strMealThumb}});"
      >
        <div class="container">
          <div class="row same-height justify-content-center">
            <div class="col-md-6">
              <div class="post-entry text-center">
                <h1 class="mb-4">{{strMeal}}</h1>
                <div class="post-meta align-items-center text-center">
                  <span>{{strCategory}}</span>
                  <span>&nbsp;-&nbsp; {{strTags}}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-center align-items-center mt-1"> 
          <form action="/likeapi/{{idMeal}}" method="POST">
          <button type="submit" class="btn  {{#userLikedRecipeApi likeUserId=like.user userId=currentUser._id}} btn-danger {{else}} btn-primary bg-light-green{{/userLikedRecipeApi}} mt-3 mx-2"><i class="fa-regular fa-heart"></i></button>
          </form>
        </div>

      <section class="section">
        <div class="container">

          <div class="row blog-entries element-animate">

            <div class="col-md-12 col-lg-12 main-content">

              <div class="post-content-body">
                <h3 class="mb-1">Ingredients</h3>
                <ul>
                  {{#each ingredients}}
                    <li>{{this}}</li>
                  {{/each}}
                </ul>
              </div>
              <h3 class="mb-1">Preparation</h3>
              <p>{{strInstructions}}</p>
              <h3 class="mb-1">From</h3>
              <p>{{strArea}}</p>

            </div>
            
    <div class="col-12">
    <h2>Comments</h2>
    {{#each comments as |comment|}}
    <div class="card my-1">
      <div class="card-body">
        <p class="card-text">{{comment.content}}</p>
        {{#userMatchRecipeUser recipeUserId=comment.user._id userId=../currentUser._id }}
        <a href="/comments/{{comment._id}}/delete" style="float: right; text-decoration: none;">üóëÔ∏è<i data-feather="trash-2" width="16" style="color: red;"></i></a>
        {{/userMatchRecipeUser}}
      </div>
      <div class="card-footer d-flex justify-content-between">
        <small class="text-body-secondary">by {{comment.user.username}}</small>
      </div>
    </div>
    {{/each}}
   


     <form action="/commentsapi/{{idMeal}}/create" method="POST">
        <div class="comment-form-wrap pt-5 ">
          <h3 class="mb-2">Leave a comment</h3>

                <div class="form-group">
                  <label for="message">Message</label>
                  <textarea name="content" id="comment" rows="3" class="form-control"></textarea>
                </div>
                  <button type="submit" class="btn btn-primary"><i class="fa-regular fa-comment"></i></button>   
    </form>

          </div>
        </div>
      </section>
    </div>

  </div>
</body>