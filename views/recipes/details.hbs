<body>
  <div class=" d-flex justify-content-center">
    <div class="card m-5 col col-lg-9 col-xl-7">
    <div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url({{recipe.image}});">
    <div class="container">
      <div class="row same-height justify-content-center">
        <div class="col-md-6">
          <div class="post-entry text-center">
            <h1 class="mb-4">{{recipe.title}}</h1>
            <div class="post-meta align-items-center text-center">
              {{#if recipe.user}}<figure class="author-figure mb-0 me-3 d-inline-block"><img src={{recipe.user.picture}} alt="Image" class="img-fluid"></figure>{{/if}}
              <span class="d-inline-block mt-1">{{#if recipe.user}}By {{recipe.user.username}}{{/if}}</span>
              <span>{{recipe.mealType}}</span>
              <span>&nbsp;-&nbsp; {{recipe.date}}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
       <div class="d-flex justify-content-center align-items-center mt-3"> 
        {{#userMatchRecipeUser recipeUserId=recipe.user._id userId=currentUser._id }} 
        <a class="btn btn-primary" href="/recipes/{{recipe._id}}/edit"><i class="fa-regular fa-pen-to-square"></i></a>
         {{/userMatchRecipeUser}}
          
          <form action="/like/{{recipe.id}}" method="POST">
          <button type="submit" class="btn  {{#userLikedRecipe likes=recipe.likes userId=currentUser._id}} btn-danger {{else}} btn-primary bg-light-green{{/userLikedRecipe}} mt-3 mx-2"><i class="fa-regular fa-heart"></i></button>
          </form>
          {{#userMatchRecipeUser recipeUserId=recipe.user._id userId=currentUser._id }} 
          <a class="btn btn-primary" href="/recipes/{{recipe._id}}/delete"><i class="fa-solid fa-delete-left"></i></a>
         {{/userMatchRecipeUser}}
        </div>

    <section class="section">
    <div class="container">

      <div class="row blog-entries element-animate">

        <div class="col-md-12 col-lg-8 main-content">

          <div class="post-content-body">
            <ul>
            {{#each recipe.ingredients}}
              <li>{{this}}</li>
            {{/each}}
            </ul>

            <p>{{recipe.preparation}}</p>
            <p>{{recipe.preparationtime}}</p>
          </div>

  </div>
  <div class="col-12">
    <h2>Comments</h2>
    {{#each recipe.comments}}
    <div class="card my-1">
      <div class="card-body">
        <p class="card-text">{{this.content}}</p>
        <a href="/comments/{{this._id}}/delete" style="float: right; text-decoration: none;">🗑️<i data-feather="trash-2" width="16" style="color: red;"></i></a>
      </div>
      <div class="card-footer d-flex justify-content-between">
        <small class="text-body-secondary">by {{this.user.username}}</small>
      </div>
    </div>
    {{/each}}
    </div>
   


     <form action="/comments/{{recipe._id}}/create" method="POST">
        <div class="comment-form-wrap pt-5 ">
          <h3 class="mb-5">Leave a comment</h3>

                <div class="form-group">
                  <label for="message">Message</label>
                  <textarea name="content" id="comment" rows="3" class="form-control"></textarea>
                </div>
                  <button type="submit" class="btn btn-primary"><i class="fa-regular fa-comment"></i></button>   
    </form>

</div>
</div>
    </section>
  </div>
  
  </div>
</body>