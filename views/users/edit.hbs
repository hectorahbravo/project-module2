<div id="signup" class="container col-xxl-4">
  <h1 class="text-center mt-5 mb-4">User Edit</h1>

  <form class="container-sm mx-auto" style="max-width: 400px;" action="/profile/edit" method="POST">
    <div class="input-group mb-2">
      <label class="w-100 mb-2" for="username" style="color: #3498db;">User Name</label>
      <input type="text" name="username"
        class="form-control  py-2 ps-4 {{#if errors.username}}is-invalid{{/if}}" placeholder="Name"
        aria-label="User name" value="{{ currentUser.username }}">
      {{#if errors.username}}<div class="invalid-feedback">{{ errors.username }}</div>{{/if}}
    </div>

     <div class="input-group mb-2">
      <label class="w-100 mb-2" for="bio" style="color: #3498db;">Bio</label>
      <input type="text" name="bio"
        class="form-control  py-2 ps-4 {{#if errors.bio}}is-invalid{{/if}}"
        placeholder="Email: user@example.org" aria-label="User bio" value="{{ currentUser.bio }}" >
      {{#if errors.bio}}<div class="invalid-feedback">{{ errors.bio }}</div>{{/if}}
    </div>

    <div class="input-group mb-2">
      <label class="w-100 mb-2" for="email" style="color: #3498db;">Email</label>
      <input type="text" name="email"
        class="form-control  py-2 ps-4 {{#if errors.email}}is-invalid{{/if}}"
        placeholder="Email: user@example.org" aria-label="User email" value="{{ currentUser.email }}" >
      {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
    </div>


    <div class="d-grid gap-2">
      <button type="submit" class="btn btn-primary bg-light-green ">Update</button>
    </div>
  </form>
</div>
